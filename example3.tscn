[sub_resource type="GDScript" id="GDScript_thcdi"]
script/source = "extends Control

@export var radial_color := Color.WHITE
@export var radial_color_inactive := Color(Color.WHITE, 0.75)

func _on_radial_container_gui_input(event):
	if event is InputEventMouseMotion:
		var wheel := get_child(0)
		var item_index : int = wheel.get_index_from_angle(event.position.angle_to_point(wheel.size * 0.5))
		wheel.colors.resize(wheel.get_child_count())
		wheel.colors.fill(radial_color_inactive)
		wheel.colors[item_index] = radial_color
		wheel.queue_redraw()



func _on_radial_container_mouse_exited():
	var wheel := get_child(0)
	wheel.colors.fill(radial_color_inactive)
	wheel.queue_redraw()
"

